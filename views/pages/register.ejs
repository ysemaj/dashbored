<!doctype html>
<html lang="en">

<head>
    <% include ../partials/head.ejs %>
</head>

<body>
    <!-- Navbar -->
    <div id="nav">
        <% include ../partials/nav %>
    </div>

    <body>
        <main role="main" class="container">
            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Progress</span>
                    </h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">General</h6>
                                <small class="text-muted">Completed</small>
                            </div>
                            <span class="text-muted"><i class="fa fa-check"></i></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Organisation</h6>
                                <small class="text-muted">Incomplete</small>
                            </div>
                            <span class="text-muted"><i class="fa fa-times"></i></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Preferences</h6>
                                <small class="text-muted">Incomplete</small>
                            </div>
                            <span class="text-muted"><i class="fa fa-times"></i></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">Declaration</h6>
                                <small>Incomplete</small>
                            </div>
                            <span class="text-success"><i class="fa fa-times"></i></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total (USD)</span>
                            <strong>$20</strong>
                        </li>
                    </ul>

                    <form class="card p-2">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Promo code">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-secondary">Redeem</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-md-8 order-md-1">
                    <div class="form-inline justify-content-between">
                        <h1 class="h1"><%- title %></h1>
                        <p class="text-muted">* indicates a mandatory field</p>
                    </div>
                    <hr class="mb-4">
                    <form class="needs-validation" novalidate="">

                        <!-- Title, forename and surname -->
                        <div class="row">
                            <div class="col-md-2">
                                <label for="title">Title</label><span class="text-muted">*</span>
                                <select class="custom-select d-block w-100" id="title" required="">
                                    <option selected disabled>Title</option>
                                    <option value="Dr">Dr</option>
                                    <option value="Mr">Mr</option>
                                    <option value="Mrs">Mrs</option>
                                    <option value="Miss">Miss</option>
                                    <option value="None">Other</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid title.
                                </div>
                            </div>

                            <div class="col-md-5 mb-3">
                                <label for="firstName">First name</label><span class="text-muted">*</span>
                                <input type="text" class="form-control" id="firstName" placeholder="John" value=""
                                    required="">
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>

                            <div class="col-md-5 mb-3">
                                <label for="lastName">Last name</label><span class="text-muted">*</span>
                                <input type="text" class="form-control" id="lastName" placeholder="Doe" value=""
                                    required="">
                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username">Username</label><span class="text-muted">*</span>
                            <div class="input-group">
                                <input autocomplete="off" type="text" class="form-control" id="username"
                                    placeholder="Username" required="">
                                <div class="invalid-feedback" style="width: 100%;">
                                    Sorry, this username is already in use.
                                </div>
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label for="email">Phone <span class="text-muted dotted"
                                    title=" Please note that a phone number is
                                required in order to enable multi-factor authentication. This can be enabled later on in Settings">(optional)</span></label>
                            <input type="phone" class="form-control" id="phone" placeholder="01234 567 890">
                            <div class="invalid-feedback">
                                Please enter a valid phone number.
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email">Email <span class="text-muted"></span></label>
                            <input type="email" class="form-control" id="email" placeholder="you@example.com">
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="address">Password</label>
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password"
                                required="">
                            <div class="invalid-feedback">
                                Please enter a valid password.
                            </div>
                        </div>

                        <!-- Organisation -->
                        <hr class="mb-4">
                        <h4 class="mb-3">Organisation</h4>

                        <!-- Org name -->
                        <div class="mb-3">
                            <label for="address2">Name<span class="text-muted"></span></label>
                            <input type="text" class="form-control" id="address2"
                                placeholder="Aberystwyth Pro Bono Society">
                        </div>

                        <!-- Address (1) -->
                        <div class="mb-3">
                            <label for="email">Address <span class="text-muted">(First Line)</span></label>
                            <label for="inputSecondLine" class="sr-only">Address</label>
                            <input type="password" id="inputSecondLine" class="form-control"
                                placeholder="10 Downing Street" required="">
                            <div class="invalid-feedback">
                                Please enter a valid address.
                            </div>
                        </div>

                        <!-- Address (2) -->
                        <div class="mb-3">
                            <label for="email">Address <span class="text-muted">(Second Line)</span></label>
                            <label for="inputSecondLine" class="sr-only">Address</label>
                            <input type="password" id="inputSecondLine" class="form-control" placeholder="..."
                                required="">
                            <div class="invalid-feedback">
                                Please enter a valid address.
                            </div>
                        </div>

                        <!-- Country, county and postcode -->
                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label for="country">Country</label>
                                <select class="custom-select d-block w-100" id="country" required="">
                                    <option value="">Choose...</option>
                                    <option>United States</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid country.
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state">County</label>
                                <select class="custom-select d-block w-100" id="state" required="">
                                    <option value="">Choose...</option>
                                    <option>California</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="zip">Postcode</label>
                                <input type="text" class="form-control" id="zip" placeholder="W1 1AA" required="">
                                <div class="invalid-feedback">
                                    Zip code required.
                                </div>
                            </div>
                        </div>

                        <!-- Checkbox -->
                        <div class="custom-control custom-checkbox mt-2">
                            <input type="checkbox" class="custom-control-input" id="same-address">
                            <label class="custom-control-label" for="same-address">Shipping address is the same as my
                                billing
                                address</label>
                        </div>

                        <hr class="mb-4">
                        <h4 class="mb-3">Payment</h4>

                        <div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="credit" name="paymentMethod" type="radio" class="custom-control-input"
                                    checked="" required="">
                                <label class="custom-control-label" for="credit">Credit card</label>
                            </div>

                            <div class="custom-control custom-radio">
                                <input id="debit" name="paymentMethod" type="radio" class="custom-control-input"
                                    required="">
                                <label class="custom-control-label" for="debit">Debit card</label>
                            </div>

                            <div class="custom-control custom-radio">
                                <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input"
                                    required="">
                                <label class="custom-control-label" for="paypal">PayPal</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="cc-name">Name on card</label>
                                <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                                <small class="text-muted">Full name as displayed on card</small>
                                <div class="invalid-feedback">
                                    Name on card is required
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cc-number">Credit card number</label>
                                <input type="text" class="form-control" id="cc-number" placeholder="" required="">
                                <div class="invalid-feedback">
                                    Credit card number is required
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="cc-expiration">Expiration</label>
                                <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
                                <div class="invalid-feedback">
                                    Expiration date required
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="cc-cvv">CVV</label>
                                <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                                <div class="invalid-feedback">
                                    Security code required
                                </div>
                            </div>
                        </div>

                        <hr class="mb-4">
                        <h4 class="mb-3">Preferences</h4>

                        <button class="btn btn-primary btn-lg btn-block" type="submit">Register</button>
                    </form>
                </div>

            </div>
        </main>

        <footer id="footer" class="container">
            <% include ../partials/footer %>
        </footer>
    </body>

</html>