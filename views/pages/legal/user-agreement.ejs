                    <p>
                        Welcome to dashbored's terms and conditions document.
                    </p>

                </div>
            </div>
        </div>
    </div>

    <script>
        $(window).scroll(function () {
            if ($(window).scrollTop() > 100) {
                $('#fix-nav').addClass('affix');
                $('#fix-nav').scrollspy();
            } else {
                $('#fix-nav').removeClass('affix');
            }
        });
    </script>

    <!-- Footer -->
    <footer id="footer" class="container">
        <% include ../../partials/footer %>
    </footer>
</body>

</html>